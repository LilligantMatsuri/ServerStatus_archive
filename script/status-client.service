[Unit]
Description=ServerStatus-client
Documentation=https://github.com/LilligantMatsuri/ServerStatus
After=network-online.target

[Service]
Type=simple
ExecStart=sh -c 'nohup python /usr/local/ServerStatus/client/status-client.py > /tmp/serverstatus_client.log 2>&1 &'
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=ssc
